<!DOCTYPE html>

<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <title>_MainLayout</title>

  <!--Инициализация HTML5 элементов для IE (версия ниже 9)-->
  @if (Context.Request.Browser.Type.Contains("IE") || Context.Request.Browser.Type.Contains("InternetExplorer"))
  {
    <script src="~/Scripts/html5shiv.min.js"></script>
    <script src="~/Scripts/html5shiv-printshiv.min.js"></script>
    <script src="~/Scripts/jquery-1.11.0.min.js"></script>
  }

  @if (!Context.Request.Browser.Type.Contains("IE") && !Context.Request.Browser.Type.Contains("InternetExplorer"))
  {
    <script src="~/Scripts/jquery-2.0.3.min.js"></script>
  }

  <!--MS unobstractive validation-->
  <script src="~/Scripts/jquery.validate.js"></script>
  <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
  <script src="~/Scripts/require.js"></script>
  <!--Стоит отдельно от require.js, т.к. нужна синхронная загрузка-->
  <script src="~/Scripts/Framework/RequireJs/config.js"></script>
  <script src="~/Content/MetroUICSS/min/jquery.widjet.min.js"></script>
  <script src="~/Content/MetroUICSS/min/metro.min.js"></script>
  

  <link href="~/Content/MetroUICSS/min/metro-bootstrap.min.css" rel="stylesheet" />
  <link href="~/Content/stylesheets/screen.css" rel="stylesheet" />
  @(new MLMExchange.Lib.ViewStyle(ViewContext).RenderPrivatePageStyle())

  @if (Context.Request.Browser.Type.Contains("IE") || Context.Request.Browser.Type.Contains("InternetExplorer"))
  { 
    <link href="~/Content/stylesheets/IE_lt_9.css" rel="stylesheet" />
  }
</head>

<!--class metro is require for metro ui-->
<body class="metro">
  <!--#region Дефолтные параметры для формы-->
  <script type="text/javascript">
    require(["jquery", "Lib/Form"], function ($, formModule) {
      $(function () {
        $.each($("form"), function (index, form) {
          new formModule.Form($(form)).ApplyDefaults();
        });
      });
    });
  </script>
  <!--#endregion-->

  <div class="main-wrapper">

    <section class="main-changable-content clearfix">
      <header class="main-header">
        <div class="main-header-top">
          <nav class="buttons">
            <a class="b-button faq" title="@MLMExchange.Properties.ResourcesA.FAQ">
              <div class="text">FAQ</div>
            </a>
            <a class="b-button contacts" title="@MLMExchange.Properties.ResourcesA.Contacts">
              <div class="text">@MLMExchange.Properties.ResourcesA.Contacts</div>
            </a>
          </nav>

          <div class="main-registration-block">
            <div class="b-button enter-button">
              <div class="text">@MLMExchange.Properties.ResourcesA.Enter</div>

              @{Html.RenderPartial("_LoginForm", (MLMExchange.Models.Registration.LoginModel)ViewBag.LoginModel);}
            </div>

            <div class="b-button register-button">
              <div class="text">@MLMExchange.Properties.ResourcesA.Registration</div>
            </div>
          </div>
        </div>
      </header>

      @*<nav class="main-top-menu">
          <a class="b-button birga-link">
            <div class="text">Пункт меню</div>
          </a>
          <a class="b-button birga-link">
            <div class="text">Пункт меню</div>
          </a>
          <a class="b-button birga-link">
            <div class="text">Пункт меню</div>
          </a>
          <a class="b-button birga-link">
            <div class="text">Пункт меню</div>
          </a>
        </nav>*@

      @RenderBody()

      <footer class="main-footer">
        <div class="sosial-buttons">
          <div class="b-button sosial-button"><i class="icon twitter"></i></div>
          <div class="b-button sosial-button"><i class="icon facebook"></i></div>
          <div class="b-button sosial-button sosial-button_location_last"><i class="icon vkontakte"></i></div>
        </div>

        <hr class="b-hr" />

        <nav class="buttons">
          <div class="b-button home">
            <i class="b-icon"></i>
            <div class="b-text">На главную</div>
          </div>
          <div class="b-button home">
            <i class="b-icon"></i>
            <div class="b-text">На главную</div>
          </div>
          <div class="b-button home">
            <i class="b-icon"></i>
            <div class="b-text">На главную</div>
          </div>
          <div class="b-button home">
            <i class="b-icon"></i>
            <div class="b-text">На главную</div>
          </div>
          <div class="b-button home ie8-last-child">
            <i class="b-icon"></i>
            <div class="b-text">На главную</div>
          </div>
        </nav>
      </footer>
    </section>
  </div>
</body>
</html>
